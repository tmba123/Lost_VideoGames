@page
@model Lost_Videogames.Pages.PublisherCreateModel
@{
    ViewData["Title"] = "Publishers";
}

<h2>Add new Publisher</h2>


@if (Model.errorMessage.Length > 0) @*Verifica se existe mensagem de erro para apresentar ao utilizador*@
{
    <div class='alert alert-warning alert-dismissible fade show' role='alert'>
    <strong>@Model.errorMessage</strong>
    <button type='button' class='btn-close' data-bs-dismiss='alert' aria-label='Close'></button>
    </div>
}
<div class="d-flex justify-content-center align-items-center">

        <form method="POST">
            <div class="form-group m-3">
            <label for="img_url">Box Art</label>
            <input class="form-control" type="text" id="img_url" name="img_url" value="/images/default.png" />
            </div>
            <div class="form-group m-3">
            <label for="name">Name</label>
            <input class="form-control" type="text" id="name" name="name" placeholder="Insert Publisher Name" />
            </div>
            <div class="form-group m-3">
             <label for="country">Country</label>
            <input class="form-control" type="text" id="country" name="country" placeholder="Insert Publisher Country" />
            </div>
            <div class="form-group m-3">
            <label for="year">Year</label>
            <input class="form-control" type="text" id="year" name="year" placeholder="Insert Publisher Year"/>
            </div>
            <div class="form-group m-3">
            <label for="State">State</label>
            <select class="form-select "id="state" name="state" >
                <option value="">Choose State</option>
                <optgroup label="State">
                    <option value="enabled">Enabled</option>
                    <option value="disabled">Disabled</option>
                </optgroup>
            </select>
            </div>
            <div class="d-flex justify-content-center m-3">
            <input class="btn btn-primary" type="button" value="Back" onclick="window.location.href='/Publisher'" />
            &nbsp;&nbsp;
            <input class="btn btn-primary" type="submit" value="Create" onclick="return confirm('Confirm create Publisher')" />
            </div>
        </form>
</div>

@if (Model.successMessage.Length > 0) @*Verifica se existe mensagem de sucesso para apresentar ao utilizador*@
{
    <div class='alert alert-success alert-dismissible fade show' role='alert'>
        <strong>@Model.successMessage</strong>
        <button type='button' class='btn-close' data-bs-dismiss='alert' aria-label='Close'></button>
    </div>
}
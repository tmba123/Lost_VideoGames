@page
@model Lost_Videogames.Pages.GameUpdateModel
@{
    ViewData["Title"] = "Games";
}
<h2>Edit Game</h2>

@if (Model.errorMessage.Length > 0)@*Verifica se existe mensagem de erro para apresentar ao utilizador*@
{
    <div class='alert alert-warning alert-dismissible fade show' role='alert'>
        <strong>@Model.errorMessage</strong>
        <button type='button' class='btn-close' data-bs-dismiss='alert' aria-label='Close'></button>
    </div>
}


<div class="d-flex justify-content-center align-items-center">
         <form method="POST">
            <input class="form-control" type="hidden" id="id_game" name="id_game" value="@Model.Game.id_game" />
            
            <div class="form-group m-3">
                <label for="name">Game ID</label>
            <input class="form-control" type="text" value="@Model.Game.id_game" disabled />
            </div>
            
            <div class="form-group m-3">
                <label for="selectpublisher">Publisher Name</label>
            <select class="form-select" id="selectpublisher" name="selectpublisher">
                <option value="@Model.Game.id_publisher">@Model.Game.publisher_name</option>
                <optgroup label="Publisher">
                    @foreach (var item in Model.PublishersEnabled)  @*Lista apenas publishers no estado enabled*@
                        {
                        <option value="@item.id_publisher">@Html.DisplayFor(modelItem => item.name)</option>
                        }
                </optgroup>
            </select>
            </div>

            <div class="form-group m-3">
                <label for="img_url">Box Art</label>
            <input class="form-control" type="text" id="img_url" name="img_url" value="@Model.Game.img_url" />
            </div>

            <div class="form-group m-3">
                <label for="name">Name</label>
            <input class="form-control" type="text" id="name" name="name" value="@Model.Game.name" />
            </div>

            <div class="form-group m-3">
                <label for="genre">Genre</label>
            <input class="form-control" type="text" id="genre" name="genre" value="@Model.Game.genre" />
            </div>

            <div class="form-group m-3">
                <label for="platform">Platform</label>
            <input class="form-control" type="text" id="platform" name="platform" value="@Model.Game.platform" />
            </div>

            <div class="form-group m-3">
                <label for="release_year">Release Year</label>
            <input class="form-control" type="text" id="release_year" name="release_year" value="@Model.Game.release_year" />
            </div>

            <div class="form-group m-3">
                <label for="state">State</label>
                <select class="form-select " id="state" name="state">
                <option selected="@Model.Game.state">@Model.Game.state</option>
                    <optgroup label="State">
                        <option value="enabled">Enabled</option>
                        <option value="disabled">Disabled</option>
                    </optgroup>
                </select>
            </div>
            
            <div class="d-flex justify-content-center m-3">
                <input class="btn btn-primary" type="button" value="Back" onclick="window.location.href='/Game'" />
                &nbsp;&nbsp;
                <input class="btn btn-primary" type="submit" value="Save" onclick="return confirm('Confirm changes')" />
            </div>
        </form>
</div>

@if (Model.successMessage.Length > 0) @*Verifica se existe mensagem de sucesso para apresentar ao utilizador*@
{
    <div class='alert alert-success alert-dismissible fade show' role='alert'>
        <strong>@Model.successMessage</strong>
        <button type='button' class='btn-close' data-bs-dismiss='alert' aria-label='Close'></button>
    </div>
}
